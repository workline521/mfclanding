.section4
    display block
    width 100%
    padding-bottom 52px
    padding-top 46px
    background-size cover
    background-position center
    background-repeat no-repeat
    background-image: url('../img/general/section4.jpg');
    @media (max-width: 1110px)
        background-image: url('../img/general/section4-mob.jpg');
    @media (max-width: 760px)
        background-image none
        padding-top 30px
        padding-bottom 20px
        border-bottom 1px solid #e9e9e9
    &__title
        display block
        font-size 38px
        font-weight 700
        line-height 38px
        padding-left 302px
        padding-bottom 19px
        @media (max-width: 959px)
            padding-left 0
            margin-left auto
            width 65%
        @media (max-width: 900px)
            width 80%
        @media (max-width: 760px)
            width 100%
            font-size 22px
            line-height 23px
            padding-bottom 15px
    &__text-wrap
        display block
        padding-left 302px
        @media (max-width: 959px)
            padding-left 0
            margin-left auto
            width 65%
        @media (max-width: 900px)
            width 80%
        @media (max-width: 760px)
            width 100%
        p
            display block
            padding-bottom 11px
            line-height 26px
