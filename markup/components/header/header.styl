* {
    box-sizing: border-box;
    outline: none;
    text-decoration none;
}
h1, h2, h3, h4, h5, h6, hr, p, ul
    margin-top 0
    margin-bottom 0
a
    text-decoration none
ul
    list-style none
    padding-left 0
iframe
    border 0
body
    width 100%
    font-family "Roboto", sans-serif
    font-size 15px
    line-height 23px
    font-weight 400
    color #00000a
.page
    position relative
.header
    display block
    width 100%
    position fixed
    top 0
    left 0
    background #fff
    z-index 100
    &__wrap
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        flex-wrap wrap
        justify-content space-between
        height 102px
        align-items center
        position relative
        @media (max-width: 959px)
            height 74px
    &__logo
        display block
        margin-right auto
        width 200px
        height 49px
        background url('../img/general/Logo.svg') no-repeat -2px center
        @media (max-width: 1110px)
            margin-right 0
    &__nav
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        flex-wrap wrap
        margin-right 60px
        @media (max-width: 1110px)
            margin-right 0
            width 436px
            justify-content space-between
        @media (max-width: 959px)
            flex-direction column
            justify-content flex-start
            width 100%
            height calc(100vh - 74px)
            position fixed
            top 74px
            right 0
            margin-right -101%
            transition all .8s ease-out
            background #fff
            z-index 200
    &__link
        display block
        color #00000a
        font-family 'Roboto', sans-serif
        font-size 16px
        font-weight 400
        transition all 0.3s ease-out
        margin-right 55px
        @media (max-width: 1110px)
            margin-right 0
        @media (max-width: 959px)
            text-align center
            margin-bottom 25px
        @media (max-width: 760px)
            margin-bottom 20px
        &:last-child
            margin-right 0
            @media (max-width: 959px)
                margin-bottom 0
        &:hover
            color $hover
    &__phone-wrap
        display block
        width 213px
        height 41px
        padding-left 80px
        position relative
        @media (max-width: 1110px)
            width 200px
            padding-left 60px
        @media (max-width: 959px)
            margin-right 62px
        @media (max-width: 760px)
            display none
        &:before
            position absolute
            content ''
            top 2px
            left 0
            width 38px
            height 38px
            background url('../img/general/phone.svg') no-repeat center
        &:after
            position absolute
            content ''
            top 0
            left 57px
            width 1px
            height 100%
            background #ececec
            @media (max-width: 1110px)
                left 49px
    &__phone-wrap2
        display none
        @media (max-width: 760px)
            display block
            margin-top 10px
            margin-left auto
            margin-right auto
            margin-bottom 20px
    &__phone
        display block
        color #00000a
        font-family 'Roboto', sans-serif
        font-size 18px
        font-weight 700
        line-height 18px

    &__modal-link
        cursor pointer
        color #b3b3b3
        font-size 16px
        font-weight 400
        line-height 16px
        border-bottom 1px solid #b3b3b3
        transition all .3s ease-out
        &:hover
            color $hover
            border-bottom 1px solid $hover
    &__btn
        display none
        @media (max-width: 959px)
            display block
            width 40px
            height 24px
            position absolute
            top 25px
            right 0
    &__stick1
        display block
        position absolute
        width 100%
        height 4px
        background #000
        top 0
        left 0
        transition all 0.4s ease-out
        border-radius 2px
    &__stick2
        display block
        position absolute
        width 100%
        height 4px
        background #000
        top 10px
        left 0
        transition all 0.4s ease-out
        border-radius 2px
    &__stick3
        display block
        position absolute
        width 100%
        height 4px
        background #000
        bottom 0
        left 0
        transition all 0.4s ease-out
        border-radius 2px
.menu-open
    overflow hidden
    height 100%
    .header__stick1
        top 10px
        transform rotate(45deg)
    .header__stick2
        opacity 0
    .header__stick3
        bottom 10px
        transform rotate(-45deg)
.menu-open body
    overflow hidden
    height 100%
.open
    margin-right 0
