.modal
    display none
    position fixed
    padding 30px
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    width 370px
    height 485px
    border-radius 3px
    background-color #3e648f
    z-index 101
    @media (max-width: 500px)
        width 296px
        height 480px
        padding 25px
    &__overlay
        display none
        position fixed
        content ''
        top 0
        left 0
        width 100%
        height 100%
        z-index 100
        background rgba(0,0,0, 0.7)
    &__title
        display block
        text-align center
        color #ffffff
        font-size 22px
        font-weight 700
        line-height 24px
        padding-bottom 10px
    &__text
        display block
        text-align center
        color #ffffff
        padding-bottom 20px
        @media (max-width: 500px)
            padding-bottom 15px
            font-size 14px
    &__form
        display block
    &__input
        display block
        width 100%
        margin-bottom 20px
        border-radius 3px
        border 1px solid #e3e3e3
        background #ffffff
        text-transform uppercase
        padding-top 13px
        padding-bottom 13px
        padding-left 30px
        padding-right 30px

        &::-webkit-input-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #7f7f7f
            letter-spacing 0.63px
        &::-moz-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #7f7f7f
            letter-spacing 0.63px
        &:-moz-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #7f7f7f
            letter-spacing 0.63px
        &:-ms-input-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #7f7f7f
            letter-spacing 0.63px
    &__input3
        margin-bottom 16px
    &__checkbox-wrap
        display block
        width 100%
        height 40px
        position relative
        margin-bottom 17px
    &__label
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        color #ffffff
        padding-left 22px
        line-height 20px
        @media (max-width: 500px)
            padding-left 30px
        &:after
            position absolute
            content ''
            top 3px
            left 0
            width 15px
            height 15px
            border-radius 3px
            background #ffffff
            z-index -1
    &__checkbox
        display block
        margin-top 5px
        margin-right 10px
        width 14px
        height 14px
        border-radius 3px
        overflow hidden
        border none
        background-color #ffffff
        cursor pointer
        opacity 0
    &__submit
        display block
        border none
        width 100%
        cursor pointer
        text-align center
        border-radius 3px
        background #aa1a17
        color #ffffff
        font-size 14px
        font-weight 700
        line-height 14px
        text-transform uppercase
        padding-top 18px
        padding-bottom 18px
        transition all 0.3s ease-out
        &:hover
            background #881512
    &__close
        display block
        cursor pointer
        position absolute
        top -20px
        right -20px
        width 20px
        height 20px
        background url('../img/general/cross.svg') no-repeat center
        @media (max-width: 500px)
            top 10px
            right 10px
.modal__checkbox:checked + .modal__label
    background url('../img/general/check-blue.svg') no-repeat 2px 6px

    @media (max-width: 500px)
        background url('../img/general/check-blue.svg') no-repeat 3px 7px

