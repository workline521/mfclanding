.container
    display block
    width 100%
    max-width 1170px
    margin-left auto
    margin-right auto
    @media (max-width: 1230px)
        max-width none
        padding-left 20px
        padding-right 20px
    @media (max-width: 1215px)
        padding-left 30px
        padding-right 30px
    @media (max-width: 760px)
        padding-left 12px
        padding-right 12px
.container2
    position relative
    @media (max-width: 1230px)
        padding-left 20px
    @media (max-width: 1215px)
        padding-left 30px
    @media (max-width: 760px)
        padding-left 12px
    &:after
        position absolute
        content ''
        width 570px
        height 533px
        left 0
        top 0
        background rgba(255, 255, 255, 0.5)
        @media (max-width: 1230px)
            left 20px
        @media (max-width: 959px)
            height 400px
        @media (max-width: 760px)
            display none
