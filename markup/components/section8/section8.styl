.section8
    display block
    width 100%
    min-height 199px
    background url('../img/general/section8.jpg') no-repeat center
    background-size cover
    padding-top 31px
    @media (max-width: 959px)
        padding-bottom 40px
    &__title
        display block
        text-align center
        color #ffffff
        font-size 22px
        padding-bottom 7px
    &__info
        display block
        text-align center
        color #ffffff
        padding-bottom 25px
    &__form
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        flex-wrap wrap
        justify-content space-between
        @media (max-width: 760px)
            width 296px
            margin-left auto
            margin-right auto
            flex-direction column
            justify-content flex-start
    &__input
        display block
        width 270px
        border-radius 3px
        border 1px solid #e3e3e3
        background transparent
        color #ffffff
        text-transform uppercase
        padding-top 13px
        padding-bottom 13px
        padding-left 30px
        padding-right 30px
        @media (max-width: 1215px)
            width 212px
            padding-left 20px
            padding-right 15px
        @media (max-width: 959px)
            width 230px
        @media (max-width: 920px)
            width 220px
        @media (max-width: 760px)
            width 100%
            margin-bottom 20px
        &::-webkit-input-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #ffffff
            letter-spacing 0.63px
        &::-moz-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #ffffff
            letter-spacing 0.63px
        &:-moz-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #ffffff
            letter-spacing 0.63px
        &:-ms-input-placeholder
            opacity 1
            font-size 14px
            font-weight 400
            line-height 23px
            color #ffffff
            letter-spacing 0.63px
    &__submit
        display block
        cursor pointer
        text-align center
        border-radius 3px
        width 270px
        background #aa1a17
        border none
        color #ffffff
        font-size 14px
        font-weight 700
        line-height 14px
        text-transform uppercase
        padding-top 18px
        padding-bottom 18px
        transition all 0.3s ease-out
        &:hover
            background #881512
        @media (max-width: 1215px)
            width 212px
        @media (max-width: 959px)
            width 230px
            margin-left auto
            margin-right auto
            margin-top 20px
        @media (max-width: 920px)
            width 220px
        @media (max-width: 760px)
            width 100%
            margin-top 0
